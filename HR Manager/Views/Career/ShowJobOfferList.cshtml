@model IEnumerable<HR_Manager.Models.JobOffer>

@{
    ViewBag.Title = "Lista ogłoszeń";
}

<div class="container">

    <div class="jumbotron">
        <h1>Lista ogłoszeń</h1>
    </div>

    <p>
        <a href="@Url.Action("Index", "Home")" type="button" class="btn btn-default">Strona główna</a>
    </p>
    <hr />

@if (Model.Any(x => x.Current == true))
{

    <div class="panel panel-default">
        <div class="panel-heading"><strong>Ogłoszenia aktualne</strong></div>
        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.OfferNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Location)</th>
                        <th>@Html.DisplayNameFor(model => model.Current)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.Current)
                        {
                            <tr>
                                <td class="vert-align">
                                    @Html.DisplayFor(modelItem => item.OfferNumber)
                                </td>
                                <td class="vert-align">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="vert-align">
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td class="vert-align">
                                    @{
                                        if (item.Current == true)
                                        {
                                            <text>Aktualne</text>
                                        }
                                        else
                                        {
                                            <text>Nieaktualne</text>
                                        }
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn">
                                        @Html.ActionLink("Edytuj", "Edit", new { id = item.OfferNumber }, new { type = "button", @class = "btn btn-md btn-default" })
                                        @Html.ActionLink("Pokaż", "Show", new { id = item.OfferNumber }, new { type = "button", @class = "btn btn-md btn-default" })
                                        @*@Html.ActionLink("Usuń", "Delete", new { id = item.OfferNumber }, new { type = "button", @class = "btn btn-md btn-default" })*@
                                    </div>
                                </td>
                            </tr>
                                            }
                                        }
                </tbody>
            </table>
        </div>
    </div>
    }
@if (Model.Any(x => x.Current == false))
{
    <div class="panel panel-default">
        <div class="panel-heading"><strong>Ogłoszenia zakończone</strong></div>
        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.OfferNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Location)</th>
                        <th>@Html.DisplayNameFor(model => model.Current)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (!item.Current)
                        {
                            <tr>
                                <td class="vert-align">
                                    @Html.DisplayFor(modelItem => item.OfferNumber)
                                </td>
                                <td class="vert-align">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="vert-align">
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td class="vert-align">
                                    @{
                                        if (item.Current == true)
                                        {
                                            <text>Aktualne</text>
                                        }
                                        else
                                        {
                                            <text>Nieaktualne</text>
                                        }
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn">
                                        @Html.ActionLink("Edytuj", "Edit", new { id = item.OfferNumber }, new { type = "button", @class = "btn btn-md btn-default" })
                                        @Html.ActionLink("Pokaż", "Show", new { id = item.OfferNumber }, new { type = "button", @class = "btn btn-md btn-default" })
                                        @*@Html.ActionLink("Usuń", "Delete", new { id = item.OfferNumber }, new { type = "button", @class = "btn btn-md btn-default" })*@
                                    </div>
                                </td>
                            </tr>
                                            }
                                        }
                </tbody>
            </table>

        </div>
    </div>
    }
</div>
