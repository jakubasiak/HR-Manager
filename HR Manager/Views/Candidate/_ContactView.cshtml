@model HR_Manager.Models.ContactViewModel


<div class="panel panel-default">
    <div class="panel-body">
        @using (Ajax.BeginForm("Contact", "Candidate", null, new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "result_" + Model.PersonId,
            OnSuccess = "clear"


        }))
        {

            <strong>@Html.LabelFor(x => x.ReturnAddress, new { @class = "col-md-4 control-label" })</strong>
            @Html.TextBoxFor(x => x.ReturnAddress, new { @class = "col-md-8 form-control" })

            <strong>@Html.LabelFor(x => x.MessageSubject, new { @class = "col-md-4 control-label" })</strong>
            @Html.TextBoxFor(x => x.MessageSubject, new { @class = "col-md-8 form-control" })

            @Html.HiddenFor(x => x.PersonId)

            <strong>@Html.LabelFor(x => x.Message, new { @class = "col-md-4 control-label" })</strong>
            @Html.TextAreaFor(x => x.Message, new { @class = "col-md-12 form-control span6" })
            <br />
            <input type="submit" class="btn btn-default" value="Wyślij" />
        }
    </div>
</div>